<div class = 'container'>

  <div class = 'jumbotron'> 
    <h3> Stock Subscriptions </h3> 
  </div>   

  <div class= 'pull-right'>
    <%= link_to 'Add Subscription', new_subscription_path, remote: true, class: "btn btn-primary", id: 'new-subscription-link' if current_user %>
  </div>

  <div id = "row">
    <div id="new-subscription-form"></div>
    <div id="edit-subscription-form"></div>
  </div>

  <%if @subscriptions.present? %>
    <table class='table table-striped'>
      <thead>
        <tr>
          <th> Stock Symbol</th>
          <th> Manage Subscription</th>
        </tr>
      </thead>
      <tbody>
      <% @subscriptions.each do |s| %>
          <tr> 
            <td> <%= s.symbol %> </td>
            <td> 
              <%= link_to 'Edit' , edit_subscription_path(s),
              id: "edit-subscription-link", remote: true %>
            <%= link_to 'Delete', subscription_path(s), method: :delete %> </td>
          </tr>
      <%end%>
      </tbody>
    </table>
  <%else %>
    <div class = "dialog">
      <h3> <%= I18n.t("unavailable_data") %> </h3>
    </div>
  <%end%>
</div>