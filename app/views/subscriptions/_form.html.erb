<%= form_for @subscription, url: path, title: title, remote: true, html: {mulitpart: true, class: 'well', role: 'form'} do |f| %>
  <div id="form-errors"></div>
  <div class = "row">
    <%= label_tag(:q, title) %>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-sm-12">
        <%= f.label :symbol, 'Stock' %>
        <%= f.collection_select(:stock_id, Stock.all, :id, :label, {:prompt => true}, :class => 'form-control') %>
        <%= f.hidden_field :user_id, :value => current_user.id %>
      </div>
    </div>
  </div>

  <div class="form-group row submit">
    <%= button_tag "Save", type: "submit", class: "btn btn-primary hvr-trim" %>
    <a class="btn btn-danger hvr-trim" id='add-subscription-cancel-button' data-behaviour="submit">Cancel</a>
  </div>
<% end %>
